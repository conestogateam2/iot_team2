{
    "name": "ms2-ingestion",
    "version": "1.0.0",
    "description": "Ingestion app for robot monitoring",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "lint": "eslint src/**/*.ts",
        "format": "eslint src/**/*.ts --fix",
        "test": "tsc && jest & jest --coverage",
        "build": "tsc",
        "prestart": "tsc",
        "start": "node ./bin/index.js",
        "dev": "npm run start",
        "prod": "npm run docker",
        "predocker": "docker build . -t com.magna.cse.atk.uc6.translator",
        "docker": "echo \"Stoping old container\" && docker stop com.magna.cse.atk.uc6.translato && echo \"Removing old container\" && docker rm com.magna.cse.atk.uc6.translato",
        "postdocker": "echo \"Spinning up new container\" && ./deploy.sh"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint"
        }
    },
    "keywords": [],
    "author": "juan.jimenez@magna.com",
    "license": "SEE LICENSE.txt",
    "dependencies": {
        "dotenv": "^16.4.7",
        "jest": "^29.7.0",
        "mqtt": "^4.3.8",
        "mssql": "^11.0.1",
        "node-sybase": "^1.1.8",
        "os": "^0.1.2",
        "process": "^0.11.10",
        "sybase": "^1.2.3",
        "tedious": "^18.6.1",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/mssql": "^9.1.5",
        "@types/node": "^20.1.2",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^6.1.0",
        "@typescript-eslint/parser": "^6.1.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^5.0.0",
        "husky": "^8.0.3",
        "prettier": "^3.0.0",
        "ts-jest": "^29.2.2",
        "typescript": "^5.8.3"
    }
}
